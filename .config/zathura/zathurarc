set sandbox none
set selection-clipboard clipboard
#set search-hadjust false
#set incremental-search false
#set n-completion-items 0
#set adjust-open width
#set window-height 3000
#set window-width 3000

map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map F follow
map [fullscreen] F follow

map <C-f> display_link
map [fullscreen] <C-f> display_link

map d quit
map [fullscreen] d quit

map p toggle_page_mode
map [fullscreen] p toggle_page_mode

map i recolor
map [fullscreen] i recolor

map = zoom in
map [fullscreen] = zoom in

map <BackSpace> zoom default
map [fullscreen] <BackSpace> zoom default

map <Space> toggle_statusbar
map [fullscreen] <Space> toggle_statusbar

map > jumplist forward
map [fullscreen] > jumplist forward

map < jumplist backward
map [fullscreen] < jumplist backward

map ] jumplist forward
map [fullscreen] ] jumplist forward

map [ jumplist backward
map [fullscreen] [ jumplist backward

map m jumplist forward
map [fullscreen] m jumplist forward

map m jumplist backward
map [fullscreen] m jumplist backward

