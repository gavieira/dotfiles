# the t key isn't used and it's easier to press than /, so lets use it
def_key "t"
    find
def_key "t"
    find_item_forward

def_key "+"
    show_clock
def_key "="
    volume_up

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "x"
    delete_playlist_items

def_key "s"
    page_up
def_key "d"
    page_down

